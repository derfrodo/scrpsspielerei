{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "tsc-w",
            "type": "process",
            "command": "tsc",
            "args": [
                "-w",
                "-p \"tsconfig.json\"",
                "--noEmit"
            ],
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}